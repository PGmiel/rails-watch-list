<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_url "jakob-owens-CiUR8zISX60-unsplash.jpg"%>)">
  <h1>Welcome to my world!</h1>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h3>Lists of Movies</h3>
      <%= link_to "Create list", new_list_path, class: "btn btn-light" %>
    </div>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-6 col-sm-3">
        <div class="my-cards">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
              <h4><%= link_to list.name, list_path(list) %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
